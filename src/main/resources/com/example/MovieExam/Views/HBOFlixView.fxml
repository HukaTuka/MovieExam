<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="695.0" prefWidth="985.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MovieExam.GUI.Controller.HBOFlixController">
   <center>
       <HBox spacing="10" BorderPane.alignment="CENTER">
           <padding>
               <Insets bottom="10" left="10" right="10" top="10" />
           </padding>
           <VBox prefWidth="200" spacing="5" HBox.hgrow="NEVER">
              <children>
                  <Label text="Categories">
                      <font>
                          <Font name="System Bold" size="13.0" />
                      </font>
                  </Label>
               <TableView fx:id="tblCategories" prefHeight="603.0" prefWidth="200.0">
                 <columns>
                   <TableColumn fx:id="lstCat" prefWidth="199.200000166893" text="Categories" />
                 </columns>
               </TableView>
                  <HBox spacing="5" />
               <HBox prefHeight="25.0" prefWidth="182.0" spacing="5">
                  <children>
                     <Button onAction="#btnAddNewC" prefWidth="65" text="New..." />
                     <Button onAction="#btnEditC" prefWidth="65" text="Edit..." />
                     <Button onAction="#btnDeleteC" prefWidth="65" text="Delete" />
                  </children>
               </HBox>
              </children>
           </VBox>
           <VBox prefHeight="661.0" prefWidth="558.0" spacing="5" HBox.hgrow="ALWAYS">
              <children>
                  <Label text="Movies">
                      <font>
                          <Font name="System Bold" size="13.0" />
                      </font>
                  </Label>
                  <HBox spacing="5">
                      <children>
                          <TextField fx:id="txtSearch" promptText="Search by title or category..." HBox.hgrow="ALWAYS" />
                          <Button fx:id="btnSearch" onAction="#btnSearch" text="Search" />
                      </children>
                  </HBox>
                  <TableView fx:id="tblMovies" prefHeight="571.0" prefWidth="530.0" VBox.vgrow="ALWAYS">
                      <columns>
                          <TableColumn fx:id="colMovieName" prefWidth="147.5" text="Title" />
                          <TableColumn fx:id="colCategory" prefWidth="180.5" text="Category" />
                          <TableColumn fx:id="coIMDBRating" prefWidth="137.0" text="IMDB Rating" />
                          <TableColumn fx:id="colPersonalRating" prefWidth="143.5" resizable="false" text="Personal Rating" />
                     <TableColumn fx:id="colLastViewed" prefWidth="143.5" resizable="false" text="Last Viewed" />
                      </columns>
                  </TableView>
                  <HBox spacing="5" />
               <HBox prefHeight="25.0" prefWidth="634.0" spacing="5">
                  <children>
                     <Button onAction="#btnNewMovie" prefWidth="65" text="New..." />
                     <Button onAction="#btnEditMovie" prefWidth="65" text="Edit..." />
                     <Button onAction="#btnDeleteMovie" prefWidth="65" text="Delete" />
                     <Button mnemonicParsing="false" onAction="#btnWatchMovie" text="Watch Movie" />
                  </children>
               </HBox>
              </children>
           </VBox>
       </HBox>
   </center>
   <bottom>
      <VBox spacing="5">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
