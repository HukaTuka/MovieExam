<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="500.0" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MovieExam.GUI.Controller.MovieWindowViewController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <children>
        <Label fx:id="lblName" text="New Movie">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <GridPane hgap="15" vgap="15">
            <padding>
                <Insets top="10" />
            </padding>

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtName" prefWidth="300.0" promptText="Enter movie title" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="IMDB rating:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="txtImdbRating" prefWidth="300.0" promptText="Enter IMDB rating" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Personal rating:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <TextField fx:id="txtPersonalRating" prefWidth="300.0" promptText="Enter personal rating" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Categories:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="3">
                <ListView fx:id="lstCategories" prefHeight="120.0" prefWidth="300.0" />
                <Label disable="true" text="Hold Ctrl/Cmd to select multiple">
                    <padding>
                        <Insets top="3" />
                    </padding>
               <font>
                  <Font size="10.0" />
               </font>
                </Label>
            </VBox>

            <Label text="File:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <font>
                    <Font name="System Bold" size="13.0" />
                </font>
            </Label>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <TextField fx:id="txtFileLink" editable="false" prefWidth="220.0" promptText="Select movie file" />
                <Button onAction="#handleBrowse" prefWidth="80.0" text="Browse..." />
            </HBox>

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <Label fx:id="lblError" textFill="red" visible="false" wrapText="true">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="20" />
            </padding>
            <Button onAction="#handleSave" prefWidth="100.0" text="Save" />
            <Button onAction="#handleCancel" prefWidth="100.0" text="Cancel" />
        </HBox>
    </children>
</VBox>
